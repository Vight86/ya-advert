{
  //htmlhint
  "htmlhint.documentSelector": [
    "html",
    "htm"
  ],
  //stylelint
  "stylelint.autoFixOnSave": true,
  //build-in formatters off
  "less.validate": false,
  "scss.validate": false,
  "css.validate": false,
  //code formatting
  "editor.formatOnSave": true,
  "editor.tabSize": 2,
  "html.format.wrapAttributes": "auto",
  "html.format.wrapLineLength": 80,
  "html.format.extraLiners": "head, /head, body, /body, header, /header, main, /main, section, /section, footer, /footer, aside, /aside, div",
  //ESlint
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  //PUG lint
  "puglint.enable": true
}